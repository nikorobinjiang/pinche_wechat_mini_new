<!--pages/newTrip/newTrip.wxml-->
  
<view class="page fondation pdb20">
    <view class="page__bd">
        <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">{{errorMsg}}</view>
        <view class='pub-title {{pubType}}'>
          <text>{{typeText}}发布</text>
          <text class='label-type-medium label-{{pubType}}'>{{rTypeText}}</text>
        </view>
        <form bindsubmit="formSubmit">
          <view class="weui-cells__title">填写拼车信息</view>
          <view class="weui-cells weui-cells_after-title">
            <!-- tripId -->
            <view>
              <input hidden='true' name="tripId" value='{{formData.id}}'/>
            </view>
            <view class="weui-cell weui-cell_input StartAndStop">
              <view class="weui-cell__hd">
                <view class="weui-label">出发地</view>
              </view>
              <view class="weui-cell__bd">
                <!-- <view class="weui-input" bindtap="sexDeparture">{{data.departure}}</view> -->
                <input class='weui-input' name="departure" maxlength='30' value="{{formData.departure}}" placeholder='请输入出发地(必填)'/>
              </view>
              <view class="weui-cell__hd">
                <view>
                <image bindtap='handleDepartureLocation'  src='../../resources/img/location.png' class="icon-location-outline"></image>
                </view>
              </view>
            </view>
            <view class="weui-cell weui-cell_input StartAndStop">
              <view class="weui-cell__hd">
                <view class="weui-label">目的地</view>
              </view>
              <view class="weui-cell__bd">
                <!-- <view class="weui-input" bindtap="sexDeparture">{{data.departure}}</view> -->
                <input class='weui-input' name="destination" maxlength='30' value="{{formData.destination}}" placeholder='请输入或选择目的地(必填)'/>
              </view>
              <view class="weui-cell__hd">
                <view>
                  <image bindtap='handleDestinationLocation' src='../../resources/img/location.png' class="icon-location-outline"></image>
                </view>
              </view>
            </view>
            <!-- <image src="/img/to.png" class="to1"></image> -->
                    
            <view class="weui-cell weui-cell_input">
              <view class="weui-cell__hd">
                <view class="weui-label">出发日期</view>
              </view>
              <view class="weui-cell__bd">
                <picker mode="date" name="leave_date" value="{{formData.leave_date}}" start="{{start}}" end="{{end}}" bindchange="bindDateChange">
                    <view class="weui-input">{{formData.leave_date}}</view>
                </picker>
              </view>
              <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </view>
            <view class="weui-cell weui-cell_input">
              <view class="weui-cell__hd">
                <view class="weui-label">出发时间</view>
              </view>
              <view class="weui-cell__bd">
                <picker mode="time" name="leave_time" value="{{formData.leave_time}}" start="00:00" end="23:59" bindchange="bindTimeChange">
                    <view class="weui-input">{{formData.leave_time}}</view>
                </picker>
              </view>
              <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </view>
            <view class="weui-cell weui-cell_input" wx:if="{{pubType == 'driver'}}">
              <view class="weui-cell__hd">
                <view class="weui-label">拼车价格</view>
              </view>
              <view class="weui-cell__bd">
                <input class="weui-input" name="price" value="{{formData.price}}" placeholder="请填写价格,不填则为面议"/>
              </view>
            </view>
            <view class="weui-cell weui-cell_input" wx:if="{{pubType == 'driver'}}">
              <view class="weui-cell__hd">
                <view class="weui-label">车型</view>
              </view>
              <view class="weui-cell__bd">
                <input class="weui-input" type="text" name="vehicle" value="{{formData.vehicle}}" placeholder="请填写车型"/>
              </view>
            </view>
            <view class="weui-cell weui-cell_input"  wx:if="{{pubType == 'driver'}}">
              <view class="weui-cell__hd">
                <view class="weui-label">剩余空位</view>
              </view>
              <view class="weui-cell__bd">
                <picker mode="selector" name="seats_count" value="{{formData.seats_count}}" range="{{Surpluss}}" bindchange="setseats_count">
                  <view class="weui-input">{{Surpluss[formData.seats_count]}}</view>
                </picker>
              </view>
              <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </view>
            <view class="weui-cell weui-cell_input"  wx:if="{{pubType == 'passenger'}}">
              <view class="weui-cell__hd">
                  <view class="weui-label">乘车人数</view>
              </view>
              <view class="weui-cell__bd">
                <picker mode="selector"  name="people_count" value="{{formData.people_count}}" range="{{Surpluss}}" bindchange="setpeople_count">
                  <view class="weui-input">{{Surpluss[formData.people_count]}}</view>
                </picker>
              </view>
              <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </view> 
        </view>
        <view class="weui-cells__title">备注信息</view>
        <view>
          <view class='demo-eg-lable'>
            <text>例如:</text>
          </view>
          <button wx:for = "{{demoEgList}}" wx:for-item="dItem" wx:key="{{dItem.id}}" class='demo-eg-item' size='mini' data-content='{{dItem.content}}' bindtap='chooseEg'>
          {{dItem.content}}
          </button>
        </view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell">
            <view class="weui-cell__bd">
              <textarea class="weui-textarea" name="demo" placeholder="更多情况,请输入说明" value="{{formData.demo}}" style="height: 3.3em" />
            </view>
          </view>
        </view>
        <view class="weui-cells__title">联系人信息</view>
          <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
              <view class="weui-cell__hd">
                <view class="weui-label">姓名</view>
              </view>
              <view class="weui-cell__bd">
                <input class="weui-input" type="text" name="contact_name" value="{{formData.contact_name}}" placeholder="请输入姓名"/>
              </view>
            </view>
            <view class="weui-cell weui-cell_input weui-cell_vcode">
              <view class="weui-cell__hd">
                <view class="weui-label">性别</view>
              </view>
              <view class="weui-cell__bd">
                  <!-- <picker mode="selector" value="{{formData.contact_gender}}" name="contact_gender" range="{{sex}}" bindchange="setSex">
                    <view class="weui-input">{{sex[formData.contact_gender]}}</view>
                  </picker> -->
                <radio-group bindchange="genderChange" name="contact_gender">
                  <label class="weui-cell weui-check__label fl" wx:for="{{genderItems}}" wx:key="value">
                    <radio class="weui-check" value="{{item.value}}" checked="{{item.checked}}"/>
                    <view class="weui-cell__ft weui-cell__ft_in-radio">
                      <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{!item.checked}}"></icon>
                      <icon class="weui-icon-checkbox_success" type="success" size="23" wx:if="{{item.checked}}"></icon>
                    </view>
                    <view class="weui-cell__bd">{{item.name}}</view>
                  </label>
                </radio-group>
              </view>
              <!-- <view class="weui-cell__ft weui-cell__ft_in-access"></view> -->
            </view>
            <view class="weui-cell weui-cell_input">
              <view class="weui-cell__hd">
                <view class="weui-label">手机号</view>
              </view>
              <view class="weui-cell__bd">
                <input class="weui-input" name="contact_phone" maxlength="11" value="{{formData.contact_phone}}" type="number" placeholder="请输入手机号"/>
              </view>
            </view>
            <view class="weui-cell weui-cell_input">
              <view class="weui-cell__hd">
                <view class="weui-label">微信号</view>
              </view>
              <view class="weui-cell__bd">
                <input class="weui-input" name="contact_wechat_account" maxlength="11" value="{{formData.contact_wechat_account}}" type="text" placeholder="请输入微信号"/>
              </view>
            </view>
          </view>
        
          <checkbox-group bindchange="bindAgreeChange" name="isAgree">
            <label class="weui-agree" for="weuiAgree">
              <view class="weui-agree__text">
                <checkbox class="weui-agree__checkbox" id="weuiAgree" value="agree" checked="{{isAgree}}" />
                <view class="weui-agree__checkbox-icon">
                  <icon class="weui-agree__checkbox-icon-check" type="success_no_circle" size="9" wx:if="{{isAgree}}"></icon>
                </view>
                阅读并同意<navigator url="/pages/toolpages/notice" class="weui-agree__link">《拼车协议》</navigator>
              </view>
            </label>
          </checkbox-group>

          <view class="weui-btn-area">
            <button class="weui-btn" type="primary" formType="submit">确定</button>
            <button class="weui-btn" bindtap='navback'>返回</button>
          </view>
        </form>
    </view>
</view>