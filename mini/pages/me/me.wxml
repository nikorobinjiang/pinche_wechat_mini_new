<!--pages/me/me.wxml-->
<view class='fondation'>
  
  <view class="flex-wrp userinfo-content bgw" style="flex-direction:row;">
    <view class="flex-item">
      <image wx:if="{{hasUserInfo}}" src='{{ userInfo.avatarUrl }}' class="userinfo-avatar"></image>
      <view wx:if="{{!hasUserInfo}}" class='userinfo-avatar'>
        <button open-type='getUserInfo' class='text-btn text-color-2 loginbtn fontsize26' bindgetuserinfo="onGotUserInfo">点击登录</button>
      </view>
    </view>
    <view class="flex-item mg20">
      <text class='userinfo-name'>{{ userInfo.nickName }}</text>
    </view>
  </view>

  <view class='mgt20'>
    <view class='menu-item bgw mgb20' bindtap='toMyTrips'>
      <text class='main-text'>我发布的</text>
      <!-- <text class='narraw-icon'>></text> -->
      <view class="weui-cell__ft weui-cell__ft_in-access top34minus"></view>
    </view>
    <button class='menu-item bgw btline-3 text-btn-menu' open-type='share'>
      <text class='main-text'>分享推广</text>
      <view class="weui-cell__ft weui-cell__ft_in-access top34minus"></view>
    </button>
    <button class='menu-item bgw btline-3 text-btn-menu' open-type='contact'>
      <text class='main-text'>投诉建议</text>
      <view class="weui-cell__ft weui-cell__ft_in-access top34minus"></view>
    </button>
  </view>

</view>
